{

  "ReRoutes": [

    // UserCenter
    {
      "UpstreamPathTemplate": "/user/{service}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],

      // "ServiceName": "UserCenter",

      "DownstreamPathTemplate": "/api/{service}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "8500"
        }
      ]
    },

    // Auth-Login
    {
      "UpstreamPathTemplate": "/auth/{action}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],

      // "ServiceName": "Auth",

      "DownstreamPathTemplate": "/connect/{action}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5800"
        }
      ]
    }

  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  }

}
